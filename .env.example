# Claude Agent System Environment Configuration
# Copy this file to .env and configure with your actual values
# SECURITY: Never commit .env files to version control

# ===== API KEYS & SECRETS =====
# Anthropic Claude API Key (Required)
# Get from: https://console.anthropic.com/
# Security: Rotate regularly, use least privilege principle
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration (Required)
# Get from: https://supabase.com/dashboard/project/your-project/settings/api
# Security: Use service role key for backend only, never expose in frontend
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===== APPLICATION SECURITY =====
# Secret key for session management and encryption (Generate with: openssl rand -hex 32)
APP_SECRET_KEY=your_generated_secret_key_here

# JWT Secret for authentication (Generate with: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here

# ===== CORS & NETWORKING =====
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# API Server Configuration
PORT=3001
NODE_ENV=development

# ===== RATE LIMITING =====
# API rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DELAY_MS=0

# ===== AI CONFIGURATION =====
# Default AI engine
DEFAULT_AI_ENGINE=claude

# AI request limits
MAX_TOKENS_PER_REQUEST=8000
MAX_REQUESTS_PER_MINUTE=20
AI_TIMEOUT_MS=30000

# ===== DATABASE CONFIGURATION =====
# Task and memory management
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT_MS=300000
MEMORY_RETENTION_DAYS=30
MAX_RETRY_ATTEMPTS=2

# ===== FILE PROCESSING =====
# Security limits for file processing
MAX_FILE_SIZE_BYTES=5242880
MAX_FILES_PER_REQUEST=50
ALLOWED_FILE_TYPES=.ts,.tsx,.js,.jsx,.json,.css,.html,.md

# ===== LOGGING & MONITORING =====
# Log levels: debug, info, warn, error, critical
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_RETENTION_DAYS=7

# Security event logging
SECURITY_LOG_ENABLED=true
FAILED_AUTH_THRESHOLD=5
IP_BLOCK_DURATION_MINUTES=15

# ===== DEVELOPMENT SETTINGS =====
# Enable verbose logging in development
VERBOSE_LOGGING=false

# Enable debug mode (SECURITY: Never enable in production)
DEBUG_MODE=false

# Enable API documentation endpoint (SECURITY: Disable in production)
ENABLE_API_DOCS=true